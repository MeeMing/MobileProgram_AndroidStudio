<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gimmyeongsu.project01.MainActivity">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TextView"
        android:text="Project01!" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Number"
        android:id="@+id/Button_CreateNumber"
        android:onClick="OnClick"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/TextView_number"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Button_Minimum"
        android:text="Min"
        android:onClick="OnClick_minimum"

        android:layout_alignBaseline="@+id/Button_Anverage"
        android:layout_alignBottom="@+id/Button_Anverage"
        android:layout_toRightOf="@+id/Button_CreateNumber"
        android:layout_toEndOf="@+id/Button_CreateNumber" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Button_Anverage"
        android:text="Avg"
        android:onClick="OnClick_Average"

        android:layout_marginTop="100dp"
        android:layout_below="@+id/TextView_number"
        android:layout_toLeftOf="@+id/Button_CreateNumber"
        android:layout_toStartOf="@+id/Button_CreateNumber" />

</RelativeLayout>
